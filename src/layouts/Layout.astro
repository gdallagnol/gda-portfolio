---
import logo from '@assets/logo.svg';
import arrow from '@assets/arrow.svg';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap" rel="stylesheet" />
  </head>
  <body class="flex flex-col">
    <header class="container flex p-6">
      <img src={logo.src} alt="" class="" />
    </header>

    <div class="container px-6 flex-1">
      <slot />
    </div>

    <footer class="bg-black text-white flex flex-col px-6 py-10 gap-8">
      <p class="text-2xl leading-8">Vamos conversar?</p>
      <button class="bg-white rounded-full text-black py-4 px-12 inline-block w-fit">contato@gdallagnol.com</button>
      <ul class="space-y-4">
        <li>
          <a href="#" class="flex justify-between">
            LinkedIn
            <button><img src={arrow.src} /></button>
          </a>
        </li>
        <li>
          <a href="#" class="flex justify-between">
            Behance
            <button><img src={arrow.src} /></button>
          </a>
        </li>
        <li>
          <a href="#" class="flex justify-between">
            Medium
            <button><img src={arrow.src} /></button>
          </a>
        </li>
      </ul>
    </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
