---
import Container from '@components/Container.astro';
import Footer from '@components/Footer.astro';
import Header from '@components/Header.astro';
import arrow from '@assets/arrow.svg';
import bgGlass2 from '@assets/background-glass-3.png';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>GDA</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-background">
    <Header />

    <Container>
      <h1 class="text-2xl lg:text-6xl text-cold-gray font-light mb-16">
        Ops! Parece que a página que <span class="xl:whitespace-nowrap">você está tentando acessar </span>

        <span class="xl:whitespace-nowrap"> não existe ou foi movida.</span>
      </h1>
      <a class="bg-cold-gray rounded-full text-white p-5 items-center inline-flex gap-8" href="/gda-portfolio"
        >Voltar para página inicial
        <img src={arrow.src} alt="" />
      </a>
      <div class="hidden xl:block xl:relative">
        <img src={bgGlass2.src} alt="" class="xl:h-[40rem] xl:absolute xl:right-0 xl:top-[-15rem]" />
      </div>
    </Container>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>

<script>
  import { setupCopyToClipboard } from '@utils/copyToClipboard.ts';

  setupCopyToClipboard('.copy-button', 'contato@gdallagnol.com');
</script>
